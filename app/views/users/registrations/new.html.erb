<%# <%= link_to 'Back', food_orders_path%>
<div class="flex justify-center content-center bg-gray-100 ">
  <div class="w-2/6 h-full m-20 bg-white text-center place-self-center p-2 rounded-lg">
    <h2 class="text-xl text-indigo-600 p-2">REGISTER</h2>
    <div class="text-left p-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"mt-1 px-3 py-2 bg-indigo-200 border shadow-sm  placeholder-gray-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-2"%>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"mt-1 px-3 py-2 bg-indigo-200 shadow-sm  placeholder-gray-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-2" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:" px-3 py-2 bg-indigo-200 border shadow-sm  placeholder-gray-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-2" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up",class:"px-3 py-2 text-white bg-indigo-600 hover:bg-indigo-700 block w-full rounded-md sm:text-sm " %>
      </div>
      <% end %>
      <div class="flexjustify-center">
        <div class="p-1">
          <p>Already a member?</p>
        </div >
        <div class="p-1 " >
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
