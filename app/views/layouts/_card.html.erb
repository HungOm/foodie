         <div class=" w-5/10">

             <%if food.published?%>
             <div class="bg-blue-100 m-10 rounded-10">
                 <div class="flex shadow-lg w-100">
                     <%= image_tag food.image_url,class:"w-4/12",alt:food.image_url.split('/')[-1].split('.')[0]%>
                     <div id="card" class="center p-3 w-100 justify-content-center">
                         <div class="dish ">
                             <h1 class="text-red-500 text-4xl"><%=food.name%> </h1>
                         </div>
                         <div class="description break-normal whitespace-pre-line h-4/4 ">
                             <p class="text-xl">
                                 <%=food.description%>
                             </p>
                         </div>
                         <div class="footer flex xlg:space-x-100  lg:space-x-85 md:space-x-30 sm:space-x-20 p-10">
                             <div class="amount justify-content-start text-green-400">
                                 <h3 class="text-2xl">$<%=food.price%></h3>
                             </div>
                             <div class="text-white cursor-pointer text-2xl">
                                 <%= button_to 'Order Now', new_food_order_path(:food_id=>food.id),method:"get",class:"cursor-pointer text-white bg-gradient-to-r from-blue-500 hover:text-white-800 rounded-full w-26 p-4 pl-5 bg-blue-600 visited:text-white"%>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
             <%end%>

         </div>