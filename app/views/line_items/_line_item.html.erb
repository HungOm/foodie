         <div class=" w-5/10">

             <%if line_item.food.published?%>
             <div class="bg-blue-100 m-10 rounded-10">
                 <div class="flex shadow-lg w-100">
                     <%= image_tag line_item.food.image_url,class:"w-4/12",alt:line_item.food.image_url.split('/')[-1].split('.')[0]%>
                     <div id="card" class="center p-3 w-100 justify-content-center">
                         <div class="dish ">
                             <h1 class="text-red-500 text-4xl"><%=line_item.food.name%> </h1>
                         </div>
                         <div class="description break-normal whitespace-pre-line h-4/4 ">
                             <p class="text-xl">
                                 <%=line_item.food.description%>
                             </p>
                         </div>
                         <div class="footer flex xlg:space-x-100  lg:space-x-85 md:space-x-30 sm:space-x-20 p-10">
                             <div class="amount justify-content-start text-green-400">
                                 <h3 class="text-2xl">$<%=line_item.food.price%></h3>
                             </div>
                             <div class="text-white text-2xl">

                             <%if line_item.status == 'approved'%>
                                <span class="bg-green-600 pt-2 pb-2 pr-4 pl-4 rounded-lg w-3 text-white"> <%=line_item.status%> &#x2705;</span>

                             <%elsif line_item.status ==="pending"%>
                                <span class="bg-green-600 pt-2 pb-2 pr-4 pl-4 rounded-lg w-3 text-white"> <%=line_item.status%> &#x2026;</span>

                            <%else%>

                             <span class="bg-gray-600 pt-2 pb-2 pr-4 pl-4 rounded-lg w-3 text-white"> <%=line_item.status%> &#x274C;</span>



                             <%end%>

                                </div>


                             


                         </div>
                     </div>
                 </div>
             </div>
             <%end%>

         </div>